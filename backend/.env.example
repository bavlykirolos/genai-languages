# Database (Switched to SQLite so you don't need PostgreSQL)
DATABASE_URL=sqlite:///./test_language_app.db

# LLM Configuration (Your Gemini Key)
LLM_API_KEY=example
LLM_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta
LLM_MODEL=gemini-2.5-flash

# Image Generation Configuration (Your Image Key)
LLM_IMAGE_API_KEY=example
LLM_IMAGE_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta
LLM_IMAGE_MODEL=imagen-4.0-fast-generate-001

# STT Configuration (Your speech-to-text Key)
STT_API_KEY=example
STT_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta
STT_MODEL=gemini-2.5-flash

# Application
ENV=dev
DEBUG=True
API_V1_PREFIX=/api/v1
PROJECT_NAME="Language Learning Backend"

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS (Fixed format for Pydantic, in case you are not using specific origins)
BACKEND_CORS_ORIGINS=["*"]
